.row
  .col-md-10.col-md-offset-1
    .row
      .col-xs-12
        .row{style: 'margin-top:20px;'}
          .col-xs-12
            %h4
              {{itinerary.comment}}
        .row
          .col-xs-12
            %h3.text-muted{style:'display:inline-block'}
              {{'cost_estimated' | translate}} :
            %h3.text-center{style:'display:inline-block'}
              {{itinerary.cost | roundUp: itinerary.returned_mode_code | currency}} 
              %span{'ng-show'=>'itinerary.returnItinerary'}
                ({{'one_way_rate' | translate}})
        .row{style:'padding:20px 0px;'}
          .col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1.text-center
            %a.btn.btn-primary.btn-block{ng: {show:'itinerary.phone', href: "{{itinerary.phone | telephoneLink }}", click: 'callService(itinerary.phone);'}}
              {{'call' | translate}} {{itinerary.service_name}}
        .row{style:'padding:20px 0px;'}
          .col-xs-12.text-center
            {{'more_info_call' | translate}} {{itinerary.phone}}

